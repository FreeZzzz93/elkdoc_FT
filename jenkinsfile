pipeline {
  agent {label 'master'}

  stages {
    stage('########### Copy from Git ###########') {
      steps {
        sh 'cp -r * /docker/elkdoc'         
        }
    }
        stage('########### UP and BUILD ###########') {
      steps {
        sh 'pwd'
        sh 'docker-compose up -d --build'
        sh 'pwd'         
        }
    }
        stage('########### Check containers status ###########') {
      steps {
        sleep 120
        sh 'docker ps -a'         
        }
    }    
  }
}