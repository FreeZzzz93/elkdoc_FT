pipeline {
  agent {label 'master'}

  stages {
    stage('########### Copy from Git ###########') {
      steps {
        sh 'cp -r * /docker/elkdoc'         
        }
    }
        stage('########### UP and BUILD ###########') {
      steps {
        sh 'docker-compose up --build'         
        }
    }
        stage('########### Check containers status ###########') {
      steps {
        sh 'docker ps -a'         
        }
    }    
  }
}